{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": [
        "Dockerfile"
      ],
      "args": [
        "--stdio"
      ]
    },
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": [
        "terraform"
      ],
      "initializationOptions": {}
    },
    "yaml": {
      "command": "yaml-language-server",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "yaml.ansible",
        "yaml"
      ]
    }
  },
  "git.addGlameToBufferVar": true,
  "diagnostic.displayByAle": true,
  "git.enableGutters": true,
  "git.realtimeGutters": false,
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "yaml.trace.server": "verbose",
  "yaml.format.enable": true,
  "yaml.completion": true,
  "yaml.schemas": {
    "http://json.schemastore.org/ansible-stable-2.6": "/(playbooks|roles|tasks|handlers|defaults|vars)/*.(yml|yaml)",
    "kubernetes": "/!(playbooks|roles|tasks|handlers|defaults|vars)/*.(yml|yaml)"
  }
}
